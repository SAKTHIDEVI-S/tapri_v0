<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt; Back"
                android:textSize="16sp"
                android:textColor="#E53935"
                android:textStyle="bold"
                android:background="@drawable/common_back_button"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Info"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>

            <View
                android:layout_width="80dp"
                android:layout_height="24dp"/>

        </LinearLayout>

        <!-- Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <!-- Earnings Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_stroke_background"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <!-- Header with Title and Segmented Control -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Earnings"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <!-- Segmented Control for Daily/Weekly/Monthly -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:orientation="horizontal"
                            android:background="@drawable/segmented_control_background"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/dailyTab"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Daily"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:background="@drawable/segmented_selected_background"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/weeklyTab"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Weekly"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:background="@drawable/segmented_unselected_background"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/monthlyTab"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Monthly"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:background="@drawable/segmented_unselected_background"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:clickable="true"
                                android:focusable="true"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Charts Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Left Side - Bar Chart -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="20dp">

                            <!-- Today's Earnings Display -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginBottom="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Today's Earnings"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚¹1,500"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="#E53935"
                                    android:fontFamily="sans-serif-medium"/>

                            </LinearLayout>

                            <!-- Bar Chart Container -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="horizontal"
                                android:gravity="bottom|center_vertical"
                                android:padding="16dp">

                                <!-- You Bar -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_weight="1"
                                    android:background="#E53935"
                                    android:layout_marginEnd="8dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="You"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                                <!-- City Avg Bar -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#CCCCCC"
                                    android:layout_marginStart="8dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="City Avg"
                                        android:textColor="@color/black"
                                        android:textSize="10sp"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Summary Text -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="12dp"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_arrow_up"
                                    android:tint="#4CAF50"
                                    android:layout_marginEnd="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="480 above city average"
                                    android:textSize="14sp"
                                    android:textColor="#4CAF50"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Right Side - Donut Chart -->
                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/donut_chart">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1,500"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Live Map Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_stroke_background"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <!-- Live Tag and Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIVE"
                            android:textSize="10sp"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:background="#FF4444"
                            android:textColor="@color/white"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LOWER"
                                android:textSize="10sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jams at MG Road, Outer Ring Rd"
                                android:textSize="14sp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Last Synced -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last synced: just now"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp"/>

                    <!-- Map Image -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/map"
                        android:scaleType="centerCrop"
                        android:background="@drawable/map_background"/>

                </LinearLayout>

                <!-- Top Areas to work today Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_stroke_background"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Areas to work today"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="16dp"/>

                    <!-- Empty content area -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#F5F5F5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No areas available"
                            android:textSize="14sp"
                            android:textColor="#666666"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Bottom Navigation Bar with 5 evenly distributed items -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/homeNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Tapri -->
            <LinearLayout
                android:id="@+id/tapriNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_groups"
                    android:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Tapri"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Earn -->
            <LinearLayout
                android:id="@+id/earnNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-16dp">

                </FrameLayout>

            </LinearLayout>

            <!-- Info (Selected) -->
            <LinearLayout
                android:id="@+id/infoNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:tint="#E53935" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Info"
                    android:textColor="#E53935"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Tips -->
            <LinearLayout
                android:id="@+id/tipsNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tips"
                    android:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Tips"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/earnButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_background"
        android:elevation="12dp"
        android:padding="12dp"
        android:src="@drawable/ic_earn"
        android:tint="#FFFFFF"
        app:layout_anchor="@+id/linearLayout2"
        app:layout_anchorGravity="top|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 