<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/job_card_background"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_marginEnd="12dp">

    <!-- Job Icon -->
    <ImageView
        android:id="@+id/jobIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_groups"
        android:tint="#1A1A1A"
        android:layout_marginEnd="12dp"/>

    <!-- Job Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ongoing : Grocery Delivery"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/jobTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45 mins left"
            android:textSize="14sp"
            android:textColor="#666666"/>

    </LinearLayout>

    <!-- View Button -->
    <TextView
        android:id="@+id/viewButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="View"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/claim_button_background"
        android:minWidth="80dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="16dp"/>

</LinearLayout> 