<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Earn Icon -->
        <ImageView
            android:id="@+id/earnIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_earn"
            android:contentDescription="Earn Icon"
            android:layout_marginEnd="16dp"
            android:tint="#FF0000"/>

        <!-- Earn Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/earnTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Earn Title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/earnSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Earn subtitle"
                        android:textSize="14sp"
                        android:textColor="#FF0000"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/earnReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:background="@drawable/hashtag_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/earnDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Earn description goes here..."
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:id="@+id/earnCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="12sp"
                android:textColor="#FF0000"
                android:background="@drawable/hashtag_bg"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 