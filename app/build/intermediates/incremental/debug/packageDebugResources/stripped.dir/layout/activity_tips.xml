<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <TextView
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt; Back"
                    android:textSize="16sp"
                    android:textColor="#E53935"
                    android:textStyle="bold"
                    android:background="@drawable/common_back_button"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tips"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:gravity="center"/>

            <View
                android:layout_width="80dp"
                android:layout_height="32dp"/>

        </LinearLayout>

        <!-- Category Tabs -->
        <HorizontalScrollView
            android:id="@+id/tabsScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- All Tab -->
                <TextView
                    android:id="@+id/allTab"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="All"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:background="@drawable/tab_unselected_background"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Fuel Tab -->
                <TextView
                    android:id="@+id/fuelTab"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Fuel"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/tab_selected_background"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Earnings Tab -->
                <TextView
                    android:id="@+id/earningsTab"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Earnings"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:background="@drawable/tab_unselected_background"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Safety Tab -->
                <TextView
                    android:id="@+id/safetyTab"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Safety"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:background="@drawable/tab_unselected_background"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Tips Content -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintTop_toBottomOf="@id/tabsScrollView"
            app:layout_constraintBottom_toTopOf="@id/bottomNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/tipsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Fuel Tips (shown when Fuel tab is selected) -->
                <LinearLayout
                    android:id="@+id/fuelTipsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Tip Card 1 -->
                    <LinearLayout
                        android:id="@+id/fuelTipCard1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/card_stroke_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/fuel"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Save fuel with smooth acceleration"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"/>

                    </LinearLayout>

                    <!-- Tip Card 2 -->
                    <LinearLayout
                        android:id="@+id/fuelTipCard2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/card_stroke_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/thunder"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Save fuel with smooth acceleration"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"/>

                    </LinearLayout>

                    <!-- Tip Card 3 -->
                    <LinearLayout
                        android:id="@+id/fuelTipCard3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/card_stroke_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/tyre"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Quick tyre check every morning"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- All Tips Container (shown when All tab is selected) -->
                <LinearLayout
                    android:id="@+id/allTipsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Additional tips for All category -->
                    <LinearLayout
                        android:id="@+id/allTipCard1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/card_stroke_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_safety"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Always wear your seatbelt"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/allTipCard2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/card_stroke_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_earnings"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Drive during peak hours for better earnings"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/homeNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/bottom_nav_icon_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Home"
                    android:textColor="@color/bottom_nav_icon_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Tapri -->
            <LinearLayout
                android:id="@+id/tapriNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_groups"
                    android:tint="@color/bottom_nav_icon_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Tapri"
                    android:textColor="@color/bottom_nav_icon_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Earn -->
            <LinearLayout
                android:id="@+id/earnNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-16dp">

                </FrameLayout>

            </LinearLayout>

            <!-- Info -->
            <LinearLayout
                android:id="@+id/infoNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:tint="@color/bottom_nav_icon_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Info"
                    android:textColor="@color/bottom_nav_icon_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Tips -->
            <LinearLayout
                android:id="@+id/tipsNav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tips"
                    android:tint="@color/bottom_nav_icon_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Tips"
                    android:textColor="@color/bottom_nav_icon_color"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/earnButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_background"
        android:elevation="12dp"
        android:padding="12dp"
        android:src="@drawable/ic_earn"
        android:tint="#FFFFFF"
        app:layout_anchor="@+id/bottomNav"
        app:layout_anchorGravity="top|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 