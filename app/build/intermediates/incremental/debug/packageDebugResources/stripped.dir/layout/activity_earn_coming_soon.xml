<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">


        <!-- Animated Illustration Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="40dp">

            <!-- Background Confetti Container -->
            <FrameLayout
                android:id="@+id/confettiContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <!-- Confetti pieces will be added programmatically -->
                
            </FrameLayout>

            <!-- Main Illustration -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">


                <!-- Car and Driver -->
                <ImageView
                    android:id="@+id/carIllustration"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/earn_comingsoon"
                    android:contentDescription="Car with driver waving"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:padding="0dp"/>

            </FrameLayout>

        </FrameLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="60dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay Tuned!"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#E53935"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exciting new features are on the way for our drivers."
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- Coming Soon Text -->
        <TextView
            android:id="@+id/comingSoonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/homeNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Home"
                android:textColor="@color/bottom_nav_icon_color"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Tapri -->
        <LinearLayout
            android:id="@+id/tapriNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_groups"
                android:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tapri"
                android:textColor="@color/bottom_nav_icon_color"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Earn -->
        <LinearLayout
            android:id="@+id/earnNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp">

            </FrameLayout>

        </LinearLayout>

        <!-- Info -->
        <LinearLayout
            android:id="@+id/infoNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Info"
                android:textColor="@color/bottom_nav_icon_color"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Tips -->
        <LinearLayout
            android:id="@+id/tipsNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tips"
                android:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tips"
                android:textColor="@color/bottom_nav_icon_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/earnButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_background"
        android:elevation="12dp"
        android:padding="12dp"
        android:src="@drawable/ic_earn"
        android:tint="#FFFFFF"
        app:layout_anchor="@+id/linearLayout2"
        app:layout_anchorGravity="top|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
