<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/otpBgImage"
        android:layout_width="420dp"
        android:layout_height="525dp"
        android:contentDescription="OTP background"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg"
        app:layout_constraintBottom_toTopOf="@id/otpCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- OTP Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/otpCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- OTP Sent Message -->
            <TextView
                android:id="@+id/otpSentMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sent OTP to +91 61xxxxxxxxxx"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:gravity="start"
                android:layout_marginBottom="16dp"/>

            <!-- Enter OTP Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter OTP"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="start"
                android:layout_marginBottom="16dp"/>

            <!-- OTP Input Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/otpField1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/otp_field_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/otpField2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/otp_field_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/otpField3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/otp_field_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/otpField4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/otp_field_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/otpField5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/otp_field_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/otpField6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/otp_field_background"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/verifyOtpButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Submit"
                android:backgroundTint="#D50000"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/rounded_red_button"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout> 