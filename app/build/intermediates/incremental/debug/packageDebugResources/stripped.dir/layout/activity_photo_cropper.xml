<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; Back"
            android:textSize="16sp"
            android:textColor="#E53935"
            android:textStyle="bold"
            android:background="@drawable/common_back_button"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Crop Photo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <View
            android:layout_width="80dp"
            android:layout_height="24dp"/>

    </LinearLayout>

    <!-- Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <!-- Image View for cropping -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="#000000"/>

        <!-- Crop overlay with guidelines -->
        <View
            android:id="@+id/cropOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"/>

        <!-- Crop frame (4:5 aspect ratio) -->
        <View
            android:id="@+id/cropFrame"
            android:layout_width="280dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:background="@drawable/crop_frame_background"/>

        <!-- Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag to adjust crop area\nRecommended: 4:5 aspect ratio"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:background="#80000000"
            android:padding="8dp"/>

    </FrameLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:gravity="center"
            android:background="@drawable/secondary_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/cropButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Done"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/primary_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

</LinearLayout>
