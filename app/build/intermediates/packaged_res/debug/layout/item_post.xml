<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <!-- User Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_background"
                android:padding="2dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ramesh"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#111"/>

                <TextView
                    android:id="@+id/postTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 hrs ago"
                    android:textColor="#888"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/moreOptions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more"
                android:contentDescription="More options"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <!-- Text-Only Post Layout (shown when no media) -->
        <LinearLayout
            android:id="@+id/textOnlyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/postCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ramesh Heavy traffic on MG Road : Consider alternate routes to avoid delays..."
                android:textColor="#111"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.2"
                android:textStyle="normal"
                android:fontFamily="sans-serif"/>

        </LinearLayout>

        <!-- Media Post Layout (shown when media exists) -->
        <LinearLayout
            android:id="@+id/mediaPostContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Post Media Container -->
            <FrameLayout
                android:id="@+id/mediaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="0dp">

                <!-- Post Image/GIF -->
                <ImageView
                    android:id="@+id/postImage"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_traffic"
                    android:contentDescription="Post media"
                    android:visibility="gone"/>

                <!-- Video Player (hidden by default) -->
                <VideoView
                    android:id="@+id/postVideo"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:visibility="gone"
                    android:contentDescription="Post video"
                    android:layout_gravity="center"/>

                <!-- Media Type Indicator -->
                <LinearLayout
                    android:id="@+id/mediaTypeIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:background="@drawable/media_type_indicator_background"
                    android:padding="6dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/mediaTypeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GIF"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <!-- Video Play Button Overlay -->
                <ImageView
                    android:id="@+id/videoPlayButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_circle"
                    android:background="@drawable/play_button_background"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Video Mute Button -->
                <ImageView
                    android:id="@+id/videoMuteButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_volume_off"
                    android:background="@drawable/mute_button_background"
                    android:padding="6dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"/>

            </FrameLayout>

            <!-- Post Content for Media Posts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/postCaptionMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ramesh Heavy traffic on MG Road : Consider alternate routes to avoid delays..."
                    android:textColor="#111"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:lineSpacingMultiplier="1.2"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Like Button -->
            <LinearLayout
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_like"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="900"
                    android:textSize="15sp"
                    android:textColor="#666"/>

            </LinearLayout>

            <!-- Comment Button -->
            <LinearLayout
                android:id="@+id/commentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/commentIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_comment"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="15sp"
                    android:textColor="#666"/>

            </LinearLayout>

            <!-- Share Button -->
            <LinearLayout
                android:id="@+id/shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_share"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/shareCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"
                    android:textColor="#666"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Save Button -->
            <LinearLayout
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/saveIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_save"
                    android:contentDescription="Save post"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>