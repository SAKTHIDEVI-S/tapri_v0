<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; Back"
            android:textSize="16sp"
            android:textColor="#E53935"
            android:textStyle="bold"
            android:background="@drawable/common_back_button"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Post a Job"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <View
            android:layout_width="80dp"
            android:layout_height="24dp"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Job Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/jobTitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., Grocery Delivery"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/card_stroke_background"
                android:layout_marginBottom="16dp"/>

            <!-- Job Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/jobDescriptionInput"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Describe the job in detail"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/card_stroke_background"
                android:gravity="top"
                android:layout_marginBottom="16dp"/>

            <!-- Hourly Rate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hourly Rate"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/hourlyRateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 120/hr"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/card_stroke_background"
                android:inputType="numberDecimal"
                android:layout_marginBottom="16dp"/>

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/locationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., Koramangala, Bangalore"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/card_stroke_background"
                android:layout_marginBottom="16dp"/>

            <!-- Duration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Duration"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/durationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 4 hours"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/card_stroke_background"
                android:layout_marginBottom="16dp"/>

            <!-- Contact Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/contactInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., +91 9876543210"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/card_stroke_background"
                android:inputType="phone"
                android:layout_marginBottom="16dp"/>

            <!-- Job Type Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/jobTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_stroke_background"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="16dp"/>

            <!-- Requirements -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirements (Optional)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/requirementsInput"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Any specific skills or equipment needed?"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/card_stroke_background"
                android:gravity="top"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Post Job Button -->
    <TextView
        android:id="@+id/postJobButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Post Job"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/primary_button_background"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout> 