<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Sticky Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:layout_gravity="top">

        <!-- Back Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; Back"
            android:textSize="16sp"
            android:textColor="#E53935"
            android:textStyle="bold"
            android:background="@drawable/common_back_button"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Earn"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"/>

        <!-- Spacer -->
        <View
            android:layout_width="60dp"
            android:layout_height="32dp"/>

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <!-- Date Tabs -->
            <LinearLayout
                android:id="@+id/dateTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Now Tab -->
                <TextView
                    android:id="@+id/nowTab"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Now"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:background="@drawable/tab_selected_background"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Tomorrow Tab -->
                <TextView
                    android:id="@+id/tomorrowTab"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Tomorrow"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A"
                    android:gravity="center"
                    android:background="@drawable/tab_unselected_background"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Next Week Tab -->
                <TextView
                    android:id="@+id/nextWeekTab"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Next week"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A"
                    android:gravity="center"
                    android:background="@drawable/tab_unselected_background"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

            <!-- Job Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/job_card_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/jobCard1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grocery Delivery"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120/hr"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JP Nagar • 11:00 AM - 3:00 PM"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/claimButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Claim"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/claim_button_background"
                        android:minWidth="80dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingHorizontal="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View job details"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/viewJobDetails1"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Job Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/job_card_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/jobCard2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grocery Delivery"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120/hr"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JP Nagar • 11:00 AM - 3:00 PM"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/claimButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Claim"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/claim_button_background"
                        android:minWidth="80dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingHorizontal="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View job details"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/viewJobDetails2"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Job Card 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/job_card_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/jobCard3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grocery Delivery"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120/hr"
                        android:textSize="16sp"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JP Nagar • 11:00 AM - 3:00 PM"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/claimButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Claim"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/claim_button_background"
                        android:minWidth="80dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingHorizontal="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View job details"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/viewJobDetails3"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Post a Job Button -->
            <LinearLayout
                android:id="@+id/postJobButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/post_job_button_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_plus"
                    android:tint="#1A1A1A"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Post a Job"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"/>

            </LinearLayout>

            <!-- Refer & Earn Section - Updated to match image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/refer_earn_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <!-- Top Section: Text and Image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Left Side: Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refer &amp; Earn"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refer 5 friends and earn 500"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"/>

                    </LinearLayout>

                                         <!-- Right Side: Image -->
                     <ImageView
                         android:layout_width="100dp"
                         android:layout_height="100dp"
                         android:src="@drawable/refer"
                         android:scaleType="fitCenter"/>

                </LinearLayout>

                <!-- Bottom Section: Full Width Button -->
                <TextView
                    android:id="@+id/referNowButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Refer now"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/refer_now_button_background"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar with 5 evenly distributed items -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/homeNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Home"
                android:textColor="@color/bottom_nav_icon_color"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Tapri -->
        <LinearLayout
            android:id="@+id/tapriNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_groups"
                android:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tapri"
                android:textColor="@color/bottom_nav_icon_color"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Earn -->
        <LinearLayout
            android:id="@+id/earnNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp">

            </FrameLayout>

        </LinearLayout>

        <!-- Info -->
        <LinearLayout
            android:id="@+id/infoNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Info"
                android:textColor="@color/bottom_nav_icon_color"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Tips -->
        <LinearLayout
            android:id="@+id/tipsNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tips"
                android:tint="@color/bottom_nav_icon_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tips"
                android:textColor="@color/bottom_nav_icon_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

         <ImageView
         android:id="@+id/earnButton"
         android:layout_width="56dp"
         android:layout_height="56dp"
         android:background="@drawable/circle_background"
         android:elevation="12dp"
         android:padding="12dp"
         android:src="@drawable/ic_earn"
         android:tint="#FFFFFF"
         app:layout_anchor="@+id/linearLayout2"
         app:layout_anchorGravity="top|center" />

             <!-- Bottom Popup Card for Claimed Job Details -->
        <LinearLayout
            android:id="@+id/bottomPopupCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="100dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <!-- Single Job View (for single claimed job) -->
            <LinearLayout
                android:id="@+id/singleJobView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/job_card_background"
                android:elevation="16dp"
                android:padding="12dp">

                <!-- Job Icon -->
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ongoing"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="12dp"/>

                <!-- Job Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ongoingJobTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ongoing: Grocery Delivery"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/ongoingJobTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45 mins left"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                </LinearLayout>

                <!-- View Button -->
                <TextView
                    android:id="@+id/viewJobButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="View"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/claim_button_background"
                    android:minWidth="80dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="16dp"/>

            </LinearLayout>

            <!-- Multiple Jobs Horizontal Scroll (replaces single job view when multiple jobs) -->
            <HorizontalScrollView
                android:id="@+id/multipleJobsScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:scrollbars="none"
                android:paddingHorizontal="0dp">

                <LinearLayout
                    android:id="@+id/claimedJobsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"/>

            </HorizontalScrollView>

            <!-- Carousel Dots Indicator (always present, but only visible for multiple jobs) -->
            <LinearLayout
                android:id="@+id/carouselDotsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

        </LinearLayout>

 </androidx.coordinatorlayout.widget.CoordinatorLayout> 